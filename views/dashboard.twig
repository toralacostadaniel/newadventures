{% extends "layout.twig" %}

{% block title %}
    Dashboard
{% endblock %}

{% block statusSensorOne %}
<div class="card">
    <div class="card-body">
        <div class="rounded-0 d-flex d-xl-flex justify-content-center justify-content-xl-center" style="margin-bottom: 10px;">
            <img class="d-xl-flex" src="../newadventures/public/assets/map.png" alt="FCFM logo" style="width: 50px;height: 50px;">
        </div>
        <h4 class="text-center card-title">Ubicación 1</h4>
        <div class="card-group flex-column">
            <div class="card border rounded" style="margin-bottom: 10px;margin-top: 10px;margin-left: 10px;">
                {% if lastMeasurementSensorOne.co2_status == 1 %}
                    <div class="card-body" style="background-color: #1CC88A;">
                        <h5 class="card-title">Dióxido de carbono</h5>
                    </div>
                {% elseif lastMeasurementSensorOne.co2_status == 0 %}
                    <div class="card-body" style="background-color: #F6C23E;">
                        <h5 class="card-title">Dióxido de carbono</h5>
                    </div>
                {% elseif lastMeasurementSensorOne.co2_status == -1 %}
                    <div class="card-body" style="background-color: #E74A3B;">
                        <h5 class="card-title">Dióxido de carbono</h5>
                    </div>
                {% else %}
                    <div class="card-body">
                        <h5 class="card-title">Dióxido de carbono</h5>
                    </div>
                {% endif %}
            </div>
            <div class="card border rounded" style="margin-bottom: 10px;margin-left: 10px;">
                {% if lastMeasurementSensorOne.temperature_status == 1 %}
                    <div class="card-body" style="background-color: #1CC88A;">
                        <h5 class="card-title">Temperatura</h5>
                    </div>
                {% elseif lastMeasurementSensorOne.temperature_status == 0 %}
                    <div class="card-body" style="background-color: #F6C23E;">
                        <h5 class="card-title">Temperatura</h5>
                    </div>
                {% elseif lastMeasurementSensorOne.temperature_status == -1 %}
                    <div class="card-body" style="background-color: #E74A3B;">
                        <h5 class="card-title">Temperatura</h5>
                    </div>
                {% else %}
                    <div class="card-body">
                        <h5 class="card-title">Temperatura</h5>
                    </div>
                {% endif %}
            </div>
            <div class="card border rounded" style="margin-bottom: 10px;margin-left: 10px;">
                {% if lastMeasurementSensorOne.humidity_status == 1 %}
                    <div class="card-body" style="background-color: #1CC88A;">
                        <h5 class="card-title">Humedad</h5>
                    </div>
                {% elseif lastMeasurementSensorOne.humidity_status == 0 %}
                    <div class="card-body" style="background-color: #F6C23E;">
                        <h5 class="card-title">Humedad</h5>
                    </div>
                {% elseif lastMeasurementSensorOne.humidity_status == -1 %}
                    <div class="card-body" style="background-color: #E74A3B;">
                        <h5 class="card-title">Humedad</h5>
                    </div>
                {% else %}
                    <div class="card-body">
                        <h5 class="card-title">Humedad</h5>
                    </div>
                {% endif %}
            </div>
       </div>
    </div>
</div>
{% endblock %}

